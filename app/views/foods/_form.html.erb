<%= form_with(model: food, url: [inventory, food], local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :measurement_unit %>
    <%= form.text_field :measurement_unit, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit 'Add Food', class: 'btn btn-primary' %>
  </div>
<% end %>