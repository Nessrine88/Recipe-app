<h1> Add food belong to inventory</h1>

<%= form_with(model: @inventory_food, url: inventory_inventory_foods_path(@inventory), local: true) do |form| %>
  <div class="input-group mb-3">
    <%= form.label :food_id, class: "input-group-text" %>
    <%= form.select :food_id, @foods.map { |key| [key.name, key.id] }, {}, { class:"form-select" } %>
  </div>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: 'form-control', required: true %>
  </div>

  <div class="actions mt-3">
    <%= form.submit 'Create Food', class: 'btn btn-primary' %>
  </div>
<% end %>